     */
    public void sortSongTitle() {

    }

    /**
     * 
     */
    public void sortReleaseYear() {

    }

    /**
     * 
     */
    public void sortByGenre() {

    }

    /**
     * 
     */
    public void representGenre() {

    }

    /**
     * 
     */
    public void representHobby() {

    }

    /**
     * 
     */
    public void representRegion() {

    }

    /**
     * Closes out the window
     */
    public void clickedQuit(Button button) {
        System.exit(0);
    }

    /**
     * 
     */
    public void clickedPrevious() {

    }

    /**
     * 
     */
    public void clickedNext() {

    }

    /**
